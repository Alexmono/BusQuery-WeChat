/* pages/Subways/Subways.wxss */
.subway{

}
/* city */
.city{
  display: flex;
  padding-left: 40rpx;
}
.city-view{
  display: flex;
  flex: 2;
}
.city_image{
  width: 32rpx;
  height: 32rpx;
  margin-top: 11rpx;
}
.city_text{
  font-size: 35rpx;
}
.city_name{
  font-size: 35rpx;
  color: #576b95;
}
/*navbar*/
.navbar{
  margin-top: 20rpx;
  display: flex;
}
.navbar-view{
  text-align: center;
  display: flex;
  flex: 1;
}
.navbar-item{
  flex: 1;
  padding: 15rpx;
}
.navbar-item-choose{
  flex: 1;
  color: #09bb07;
  background: rgb(230, 230, 230);
  border-top-left-radius: 20rpx;
  border-top-right-radius: 20rpx;
  padding: 15rpx;
}

/*content*/ 
.box{
  padding-bottom: 40rpx;
  width: 100%;
  background: rgb(230, 230, 230);
  display: flex;
  border-bottom-left-radius: 20rpx;
  border-bottom-right-radius: 20rpx;
}
/* 站点 */
.station-search{
  padding: 40rpx;
  margin-top: 30rpx;
  flex: 1;
}
.station-search-title{
  margin-top: 10rpx;
  text-align: center;
  font-size: 20px;
}
.station-search-input{
  margin-top: 10rpx;
  padding: 20rpx;
  padding-right: 30rpx;
  padding-top: 20rpx;
}
.station-search-input-view-text{
  font-size: 16px;
  color: #09bb07;
}
.station-search-input-view-input{
  border-bottom-color: grey;
  border-bottom-style: solid;
  border-bottom-width: 1px;
  height: 50rpx;
  padding-top: 20rpx;
}
.station-search-input-view-input:hover{
  border-bottom-color: #09bb07;
}
.station-search-button{
  padding-top: 35rpx;
  padding-bottom: 15rpx;
}
.station-search-button-view{
  padding-right: 190rpx;
  padding-left: 190rpx;
}
.station-search-button-view-button{
  color: white;
  background: #09bb07;
  padding: 10rpx;
}
.station-search-button-view-button:active{
  background: #279e25;
}
/* 线路 */
.line-way{
  padding-right: 50rpx;
  padding-left: 50rpx;
  padding-top: 20rpx;
}
/* 搜索框 */
.line-search{
  padding: 10rpx;
  padding-left: 50rpx;
}
.search{
  width: 525rpx;
  align-items: center;
  padding: 10rpx;
  display: flex;
  }
.search-view{
  flex: 8;
  display: flex;
  align-items: center;
  border-radius: 30rpx;
  background: rgb(245, 245, 245);
  padding: 10rpx;
  justify-content: center;

  border-bottom-color: rgb(245, 245, 245);
  border-bottom-style: solid;
  border-bottom-width: 1px;

  border-top-color: rgb(245, 245, 245);
  border-top-style: solid;
  border-top-width: 1px;

  border-right-color: rgb(245, 245, 245);
  border-right-style: solid;
  border-right-width: 1px;

  border-left-color: rgb(245, 245, 245);
  border-left-style: solid;
  border-left-width: 1px;
}
.search-view:hover{
  border-bottom-color: #09bb07;
  border-bottom-style: solid;
  border-bottom-width: 1px;

  border-top-color: #09bb07;
  border-top-style: solid;
  border-top-width: 1px;

  border-right-color: #09bb07;
  border-right-style: solid;
  border-right-width: 1px;

  border-left-color: #09bb07;
  border-left-style: solid;
  border-left-width: 1px;
}
.search-view-input-view{
  padding: 5rpx;
  flex: 9;
}
.search-view-input{
  margin-left: 15rpx;
  font-size: 28rpx;
}

.search-view-navigator-view{
  flex: 1;
  float: right;
  align-items: center;
  display: flex;
}
.search-view-navigator{
  flex: 9;
  float: right;
  justify-content: center;
  align-items: center;
  display: flex;
  padding: 5rpx;
  padding-left: 5rpx;
}
.line-search-button{
  width: 25rpx;
  height: 25rpx;
}
/* 展示 */
.line-display{
  margin-left: 40rpx;
  border-radius: 15px;
  padding-top: 10rpx;
  padding-left: 15rpx;
  padding-right: 15rpx;
  padding-bottom: 10rpx;
  background: white;
  border-bottom-color: #d2d2d2;
  border-bottom-style: solid;
  border-bottom-width: 1px;

  border-top-color: #d2d2d2;
  border-top-style: solid;
  border-top-width: 1px;

  border-right-color: #d2d2d2;
  border-right-style: solid;
  border-right-width: 1px;

  border-left-color: #d2d2d2;
  border-left-style: solid;
  border-left-width: 1px;
}
.line{
  padding-top: 17rpx;
  padding-bottom: 17rpx;
  border-bottom-color: rgb(220, 220, 220);
  border-bottom-style: solid;
  border-bottom-width: 1px;
}
.lineName{
  margin-left: 40rpx;
}
.lineColor{
  border-radius: 100%;
  float: right;
  width: 30rpx;
  height: 30rpx;
  margin-right: 60rpx;
  margin-top: 10rpx;
}