/* miniprogram/pages/Position/Position.wxss */

.position-body {
  padding-right: 25rpx;
  padding-left: 10rpx;
}

.searchLetter {
  position: fixed;
  right: 0;
  width: 50rpx;
  text-align: center;
  justify-content: center;
  display: flex;
  flex-direction: column;
  color: #666;
  z-index: 1;
}

.searchLetter view {
  margin-top: 20rpx;
}

.touchClass {
  background-color: #fff;
  color: #fff;
  padding-top: 46rpx;
}

.showSlectedLetter {
  background-color: rgba(0, 0, 0, 0.5);
  color: #fff;
  display: flex;
  justify-content: center;
  align-items: center;
  position: fixed;
  top: 50%;
  left: 50%;
  margin: -100rpx;
  width: 200rpx;
  height: 200rpx;
  border-radius: 20rpx;
  font-size: 52rpx;
  z-index: 1;
}

.selection {
  display: flex;
  width: 100%;
  flex-direction: column;
  margin-top: 10rpx;
}

.item_letter {
  display: flex;
  background-color: #f5f5f5;
  height: 40rpx;
  padding-left: 20rpx;
  align-items: center;
  font-size: 24rpx;
  color: #666;
}

.item_city {
  display: flex;
  background-color: #fff;
  height: 100rpx;
  padding-left: 20rpx;
  align-items: center;
  border-bottom: 1rpx solid #ededed;
  font-size: 24rpx;
  color: #666;
}

.hotcity-common {
  font-size: 24rpx;
  color: #666;
  padding: 0 0 0 30rpx;
}

.thishotText {
  color: #09bb07;
  font-size: 20rpx;
  margin: 0 !important;
}

.slectCity {
  border-color: #09bb07 !important;
}

.slectCity view {
  color: #09bb07 !important;
}

.weui-grid {
  position: relative;
  float: left;
  padding: 10rpx 0;
  width: 149.5rpx;
  box-sizing: border-box;
  border: 1rpx solid rgb(210, 210, 210);
  border-radius: 8rpx;
  margin: 10rpx 12rpx;
}

.weui-grid__label {
  display: block;
  text-align: center;
  color: #333;
  font-size: 24rpx;
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;
}

.position-title {
  padding-left: 20rpx;
}

.thisCity {
  padding-top: 30rpx;
  font-size: 24rpx;
  color: #666;
  padding: 0 0 0 15rpx;
}

.position-title-button {
  display: flex;
  padding: 15rpx;
}

.thisCityName {
  display: flex;
  flex: 1;
}

.thisCityName-text {
  text-align: center;
  padding-left: 40rpx;
  padding-right: 40rpx;
  min-width: 73rpx;
  border: 1rpx solid #09bb07;
  border-radius: 8rpx;
  font-size: 24rpx;
  color: #09bb07;
  height: 50rpx;
  line-height: 45rpx;
}

.position-onclick-button-view {
  display: flex;
  flex: 1;
}

.position-onclick-button {
  font-size: 24rpx;
  color: #09bb07;
}

.position-sure-button-view {
  display: flex;
  float: right;
  flex: 2;
  padding-right: 50rpx;
}

.position-sure-button-befor-blanke{
  flex: 1;
}

.position-sure-button {
  flex: 1;
  font-size: 24rpx;
  border: 1rpx solid #09bb07;
  border-radius: 8rpx;
  color: #09bb07;
}
